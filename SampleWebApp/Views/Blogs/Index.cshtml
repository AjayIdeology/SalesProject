@model SampleWebApp.Models.ListWithMessage<SampleWebApp.Models.BlogListModel>


<h2>Blogs</h2>

@Model.FormHtmlMessage()

<p>
    Below you will see a table of Blogs which can be manipulated, and analysed. 
</p>
<p>
    The point of this page is to provide a simple demonstration of calling a business method - click the Analyse link to trigger this.
</p>
<hr />
<div>
    <span>@Html.ActionLink("Create New Blogger", "Create") | @Html.ActionLink("Posts", "Index", "Posts")</span>
    @*<span class="pull-right"><strong>@Html.ActionLink("Explanation of the code", "CodeView")</strong></span>*@
</div>

<table class="table">
    <tr>
        <th>
        </th>
        <th>
            Name
        </th>
        <th>
            Email address
        </th>
        <th>
            Num posts
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Data) {
    <tr>
        <td>
            @Html.HiddenFor(modelItem => item.BlogId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumPosts)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BlogId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BlogId }) |
            @Html.ActionLink("Analyse", "Analyse", new { id=item.BlogId }) |
            @Html.ActionLink("List Posts", "Index", "Posts", new { id = item.BlogId }, null)
        </td>
    </tr>
}

</table>
