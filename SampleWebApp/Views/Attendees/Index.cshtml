@{
    ViewBag.Title = "Index";
}
@Html.Partial("SecuritySubMenu")
<h2>Course Attendees</h2>

@if (TempData["message"] != null)
{
    <div class="text-success">@TempData["message"]</div><br />
}
@if (TempData["errorMessage"] != null)
{
    <div class="text-danger"><strong>@TempData["errorMessage"]</strong></div>
}

<p>
    Some of the users cannot see any attendee data. Therefore we need to have this default page:
</p>

<p>Here are the links to the actions. Which of these work depends on the current user selected.</p>

<table class="table">
    <tr>
        <td>
            <a class="btn btn-primary btn-default" href="@Url.Action("ListNames")" style="width: 150px;">List attendees</a> 
        </td>
        <td>
            Names only (everybody other than -- not logged in -- can do this)
        </td>
    </tr>
    <tr>
        <td>
            <a class="btn btn-primary btn-default" href="@Url.Action("ListPaid")" style="width: 150px;">List attendees</a>
        </td>
        <td>
            Full data including whether paid, sorted by course (Only admin and finance staff can see this)
        </td>
    </tr>
    <tr>
        <td>
            <a class="btn btn-primary btn-default" href="@Url.Action("Reset")" style="width: 150px;">Reset Course data</a> 
        </td>
        <td>
            Any user can do this - this is not secured.
        </td>
    </tr>
</table>